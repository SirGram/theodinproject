extends layout

block content
  h1=title

  form(method='POST')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Name (Apple)' name='name' required value=(undefined===brand ? '' : brand.name) )
      label(for='year_foundation') Date Foundation:
      input#year_foundation.form-control(type='number', placeholder='Date Foundation (1980)' name='year_foundation' value=(undefined===brand ? '' : brand.year_foundation_number))
    div.form-group
     button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
